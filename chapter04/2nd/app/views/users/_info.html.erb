<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
	  <th>フォロー数:</th>
	  <th><%= user.follower.count %></th>
  </tr>
  <tr>
	  <th>フォロワー数：</th>
	  <th><%= user.followed.count %></th>
  </tr>
</table>
<div class="row">
  <% unless user == current_user %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー解除", user_relationships_path(user_id: user.id), method: :delete, class:"btn btn-sm btn-block btn-secondary" %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(user_id: user.id), method: :post, class:"btn btn-sm btn-block btn-info" %>
    <% end %>
  <% end %>
</div>
<div class='row'>
  <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id} mt-3" %>
</div>